<div class="container">
  <h1>Here is the <%= '**'+ @name +'**' %> you were searching for:</h1>
  <%= link_to 'Back to products', products_path %>

  <table id="product_table" class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Brand</th> 
        <th>Isle</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>  
      <% if product.name == params[:name].capitalize %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.isle %></td>
        <td><%= product.price %></td>
      </tr>
    </tbody>
    <% end %>
    <% end %>
 
  
   </table>
  <div>
  </div>