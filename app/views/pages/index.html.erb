<div class="container">

  <div>
    <h1 id='index'>PRODUCTS</h1>
  </div>
  <h2>Please browse the items listed and make your choice for a purchase</h2>
  
    <%= form_tag '/search', class: "navbar-form navbar-left" do %>
    <div class="form-group">
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "search here" %>
    </div>
    <%= submit_tag 'Search', class: "btn" %>

    <% end %>

    <div>  
     
        

        <tbody>
          <% @products.each do |product| %> 
           
          <p>
           <div class="col-md-3">
            <div class="thumb">
              <a href="/products/<%= product.id %>">
                
                <img src="<%= product.photo %>" height="200" width="200">
                  <h3><%= product.name %></h3s>
              </a>
              <br/>
              <p><a href='products/<%= product.id %>/edit'>EDIT/</a></p>
              <p><a data-confirm='Are you sure?'data-method="delete" href="/products/<%= product.id %>" rel="nofollow">DELETE</a></p>            
              <p><%= product.brand %></p>             
              <p><%= product.department %></p>             
              <p>Isle: <%= product.isle %></p>
              <p><%= product.num_to_currency %></p>
              <p><%= product.discount %></p>
            </div>
           </div>
          </p>
       
         <% end %>
       </tbody>
     </table>    
   </div>
 </div>

