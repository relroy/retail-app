<div class="container">
  

  <div>
    <h1 id='index'>PRODUCTS</h1>
     <%= form_tag '/search', class: "navbar-form navbar-right" do %>
    <div class="form-group">
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "search here" %>
    </div>
    <%= submit_tag 'Search', class: "btn" %>
     
    <% end %>
  </div>

  <h2>Please browse the items listed and make your choice for a purchase</h2>
  <div class="cart">
     <div class="btn btn-primary btn-lg" role="button">

      <%= link_to "Cart", carted_products_path %>
     </div>
   </div>
  <div> 
  <table>  
<tbody>
  <% @products.each do |product| %> 
    <p>
      <div class="col-md-3">
        <div class="thumb">
         <a href="/products/<%= product.id %>"> 
         <h3><%= product.name %></h3>              
          <img src="<%= product.photo %>" height="200" width="200" >
          
          <% if user_signed_in? && current_user.admin? %>
          
           <%= link_to 'EDIT', edit_product_path(product.id) %>
          <p><a data-confirm='Are you sure?'data-method="delete" rel="nofollow"></a><%= link_to 'DELETE', product_path(product.id) %> </p>
          <% end %>       
          <p>Price: <%= product.num_to_currency %></p>
         </a>          
        </div>
      </div>
    </p>
  <% end %>
</tbody>
     </table> 
     
   </div>
   
</div>
 