<div class="container">
  <h1>New Customer</h1>

  <%= form_for @customer do |f| %>
  <div>
    <%= f.label :first_name %>
    <br/>
    <%= f.text_field :first_name %>
  </div>
  <%= f.label :last_name %>
  <br/>
  <%= f.text_field :last_name %>
  <div>
    <%= f.label :address %>
    <br/>
    <%= f.text_field :address %>
  </div>
  <%= f.label :phone_number %>
  <br/>
  <%= f.text_field :phone_number %>
  <div>
    <%= f.label :email %>
    <br/>
    <%= f.text_field :email %>
  </div>

  <br/>
  <div>
    <%= f.submit %>

  </div>



  <% end %>
  <br/>
</div>